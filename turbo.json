{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {},
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
