{
  "name": "@notion-md-converter/zenn",
  "version": "0.9.0",
  "description": "Notion to Zenn Markdown Converter",
  "license": "MIT",
  "author": "malvageee (https://github.com/salvage0707)",
  "engines": {
    "node": ">=24.0.0"
  },
  "keywords": [
    "notion-md-converter",
    "notion",
    "notion-api",
    "zenn",
    "markdown",
    "converter"
  ],
  "repository": {
    "url": "https://github.com/salvage0707/notion-md-converter.git",
    "type": "git",
    "directory": "packages/notion-md-converter-zenn"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:once": "vitest run",
    "check-types": "tsc --noEmit",
    "build": "rollup -c",
    "build:size": "find dist -type f -exec ls -l {} \\; | awk '{total += $5} END {print \"Total size in KB:\", total/1024}'"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "dependencies": {
    "@notion-md-converter/core": "workspace:*"
  },
  "devDependencies": {
    "@notion-md-converter/config": "workspace:*",
    "@notion-md-converter/types": "workspace:*",
    "@notion-md-converter/testing": "workspace:*"
  }
}
